<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cursor_item_background_layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    tools:context=".GpaActivity">


    <!-- the circle shape that contain the gpa as letter -->
    <TextView
        android:id="@+id/cursor_item_circle_gpa"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/circle_shape"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        tools:text="A+" />


    <!-- Linear contain the student info and gpa as number -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <!-- for the student name -->
        <TextView
            android:id="@+id/cursor_item_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@color/details_of_cursor_item"
            android:textSize="12sp"
            tools:text="Mahmoud Tharwat Mohamed" />

        <!-- for the student ID -->
        <TextView
            android:id="@+id/cursor_item_student_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/details_of_cursor_item"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="17136" />


        <!-- for the statement that contains the gpa number -->
        <TextView
            android:id="@+id/cursor_item_gpa_statement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Semester(5) / GPA = 3.75" />


    </LinearLayout>


    <!-- Linear contain the date and time -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <!-- for date -->
        <TextView
            android:id="@+id/cursor_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/details_of_cursor_item"
            android:textSize="12sp"
            tools:text="Mar 6, 2020" />

        <!-- for time -->
        <TextView
            android:id="@+id/cursor_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/details_of_cursor_item"
            android:textSize="12sp"
            tools:text="3:00 AM" />

    </LinearLayout>


    <!-- for selecting the item -->
    <CheckBox
        android:id="@+id/cursor_item_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />


</LinearLayout>